<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    android:orientation="vertical"
    tools:context=".BloodBank">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="167dp"
            android:layout_height="165dp"
            android:layout_marginTop="3dp"
            app:srcCompat="@drawable/dropbloodicon"
            />/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="ADMIN PANEL"
                android:textColor="#FFFFFF"
                android:textSize="45sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextupate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/backgroundeditview"
                android:ems="10"
                android:hint="Enter Needy Cnic/Enetr DPHONE"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#131213"
                android:textColorHint="#0E0D0E" />


            <Spinner
                android:id="@+id/nSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:entries="@array/status" />

            <Button
                android:id="@+id/button_updateneedy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/backgroundeditview"


                android:text="Update Needy"
                android:textColor="#000000"
                android:textSize="18sp"

                app:backgroundTint="#1DE91E63"
                app:iconTint="#FFFFFF" />


            <Button
                android:id="@+id/button_updatedonated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/backgroundeditview"


                android:text="Update Donated"
                android:textColor="#000000"
                android:textSize="18sp"

                app:backgroundTint="#1DE91E63"
                app:iconTint="#FFFFFF" />

            <Button
                android:id="@+id/button_vNeedy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/backgroundeditview"

                android:text="VIEWNEEDYPERSON"
                android:textColor="#050505"
                android:textSize="18sp"

                app:backgroundTint="#1DE91E63"
                app:iconTint="#FFFFFF" />

            <Button
                android:id="@+id/button_vDonated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/backgroundeditview"

                android:text="View Donated Person"
                android:textColor="#1B1919"
                android:textSize="18sp"

                app:backgroundTint="#1DE91E63"
                app:iconTint="#FFFFFF" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>




